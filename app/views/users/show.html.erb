<%# profile picture %>
<%= turbo_frame_tag id='profile_picture', src: user_profile_path(@user) %>


<% if @user == current_user %>

  <%# upload profile picture form %>
  <%= turbo_frame_tag id='edit_profile_picture', src: edit_user_profile_path(@user) %>

  <%# new post form %>
  <%= turbo_frame_tag id='new_post', src: new_user_post_path(@user) %>

<% else %>

  <%# friend request button %>
  <% if @friend_request %>
    <%= turbo_frame_tag id='friend_request', src: user_friend_request_path(@user, @friend_request) %>
  <% else %>
    <%= turbo_frame_tag id='friend_request', src: new_user_friend_request_path(@user) %>
  <%end%>

<%end%>

<%# all posts of user %>
<%= render 'posts/all_posts_of_user' %>

